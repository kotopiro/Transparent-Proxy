    "tracking": {
      "enabled": true,
      "description": "トラッキングスクリプト",
      "domains": [
        "mixpanel.com",
        "*.mixpanel.com",
        "hotjar.com",
        "*.hotjar.com",
        "segment.com",
        "*.segment.com",
        "amplitude.com",
        "*.amplitude.com",
        "fullstory.com",
        "*.fullstory.com"
      ]
    },
    
    "social": {
      "enabled": false,
      "description": "ソーシャルメディアボタン",
      "domains": [
        "platform.twitter.com",
        "widgets.pinterest.com",
        "platform.linkedin.com"
      ]
    },
    
    "custom": {
      "enabled": true,
      "description": "カスタムブロックリスト（管理者が追加）",
      "domains": []
    }
  },
  
  "whitelist": {
    "description": "常に許可するドメイン（ブラックリストより優先）",
    "domains": [
      "localhost",
      "127.0.0.1",
      "*.local"
    ]
  },
  
  "patterns": {
    "description": "正規表現パターンによるブロック",
    "enabled": false,
    "list": [
      {
        "pattern": ".*casino.*",
        "description": "カジノ関連"
      },
      {
        "pattern": ".*poker.*",
        "description": "ポーカー関連"
      }
    ]
  },
  
  "security": {
    "blockPrivateIPs": false,
    "blockLocalhostRequests": false,
    "blockFileProtocol": true,
    "blockDataURI": false
  },
  
  "messages": {
    "blocked": "このサイトはブロックされています。",
    "malware": "このサイトはマルウェアの可能性があるためブロックされました。",
    "adult": "このサイトはアダルトコンテンツを含むためブロックされました。",
    "illegal": "このサイトは違法コンテンツを含むためブロックされました。",
    "custom": "管理者によってこのサイトはブロックされています。"
  }
}
